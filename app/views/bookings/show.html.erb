<div class="container">
  <div class="row justify-content-center">
    <h1>Bookings for <%= @booking.user.first_name %> <%= @booking.user.last_name %></h1>
    <div class="row justify-content-center">
      <h2>Detail of <%= @booking.place.name %></h2>
      <p><%= @booking.place.description %></p>
      <p><%= @booking.place.address %></p>
      <p>Capacity : <%= @booking.place.capacity %> | $<%= @booking.place.price_per_day %>/day</p>
    </div>
    <p>Booked from <%= @booking.start_date.strftime("%Y/%m/%d") %> to <%= @booking.end_date.strftime("%Y/%m/%d") %></p>
  </div>
</div>
