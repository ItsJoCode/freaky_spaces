<div class="container p-5">
  <div class="row">
    <div class="log col-12 col-sm-4 mx-auto p-4">
    <h2 class="text-center">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="col-12 mb-3 pt-4">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
      <div class="col-12 mb-3">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
      <div class="col-12 mb-3 no-password">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= link_to "Forgot your password?", new_user_password_path %>
      </div>
      <div class="col-12 mb-3">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg w-100" %>
      </div>
      <hr>
      <div class="no-account">
        <p>Don't have an account? <%= link_to "Sign up", new_user_registration_path %> </p>
      </div>
    <% end %>
    </div>
  </div>
</div>

