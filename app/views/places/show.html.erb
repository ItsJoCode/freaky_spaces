<div class="main-container-places">
    <div class="booking-bg" style="background: url('<%= cl_image_path @place.photo.key %>');"></div>
    <div class="booking-show">
      <div class="detail-flex">
        <div class="details">
          <h1>Detail of <%= @place.name %> <%= image_tag("stars.png", class: "stars") %></h1>
          <hr>
          <div class="img-detail-flex">
            <div>
              <%= cl_image_tag @place.photo.key %>
            </div>
            <div>
              <p class="description"><%= @place.description %></p>
              <p class="capacity-price"><span><i class="fa-solid fa-people-group"></i> Capacity : <%= @place.capacity %></span> <span><i class="fa-solid fa-euro-sign"></i> <%= @place.price_per_day %>/day</p></span>
            </div>
          </div>
          <hr>
          <p class="address"><i class="fa-solid fa-location-dot"></i> <%= @place.address %></p>
          <p class="owner">Owner : <%= @place.user.first_name %> <%= @place.user.last_name %></p>
        </div>
        <div class="form-booking">
          <div class="booked-now">Booked Now</div>
          <p><%= render "bookings/form" %></p>
        </div>
      </div>
    </div>
</div>
